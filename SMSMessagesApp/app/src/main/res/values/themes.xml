<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSMessagesApp" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/gray_light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/gray_light</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/gray_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/gray_light</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/gray_light</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/error</item>
        <item name="colorOutline">@color/gray_medium</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/gray_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        <item name="colorSurfaceInverse">@color/surface_dark</item>
        <item name="colorOnSurfaceInverse">@color/text_primary_dark</item>
        <item name="colorPrimaryInverse">@color/white</item>
